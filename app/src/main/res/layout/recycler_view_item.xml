    android:id="@+id/uiid"/>
    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/nombre_empleado"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nombre_viaje"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rfc"
        />
</LinearLayout>